.list-group {
  display: flex;
  flex-wrap: wrap;
  padding-top: 15px;
}

.panel-heading {
  text-align: center;
}

.main-visual {
  background-image: url(<%= image_path("cake.jpg") %>);
  background-color: #000000;
  width: 600px;
  height: 300px;
  background-size: cover;
  background-position: top;
  display: flex;
  justify-content: center;
  align-items: center;
}

.main-visual-content {
  width: 400px;
  height: 200px;
  background-color: rgba( 255, 255, 255, 0.6);
  text-align: center;
  padding-top: 60px;
}

.main-visual-name {
  font-size: 16px;
}

.genre-list {
  list-style: none;
  padding: 10px 15px;

}

.genre-list-item {
  font-size: 15px;
}

.cart_btn {
  padding-top: 90px;
  text-align: right;
}
