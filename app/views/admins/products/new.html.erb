<div class="container">
 <h2>商品新規登録</h2> 
 <%= form_for [:admins, @product] do |f| %>
  <div class="row">
    
    <div class="col-xs-4">
      <div class="field">
        <%=attachment_image_tag(@product, :image, :fill, 500, 500, format: 'jpeg', fallback: "no_image.jpg", size: '500×500') %>
        <%= f.attachment_field :image, class: "product_image" %>
      </div>
    </div>

    <div class="col-xs-4">
      <div class="field">
        <tr>
          <td>商品名</td>
          <td><%= f.text_field :name %></td>
        </tr>
      </div>
      <div class="field">
        <tr>
          <td>商品説明</td>
          <td><%= f.text_area :description %></td>
        </tr>
      </div>
      <div class="field">
        <tr>
          <td>ジャンル</td>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: '--選択してください--' %></td>
        </tr>
      </div>
      <div class="field">
        <tr>
          <td>税抜価格</td>
          <td><%= f.text_field :price %>円</td>
        </tr>
      </div>
      <div class="field">
        <tr>
          <td>販売ステータス</td>
          <td><%= f.select :is_active, [["売切れ", false],["販売中", true]], include_blank: '--選択してください--' %></td>
          
        </tr>
      </div>
    </div>
  </div>
 
  <div class="row field">
    <%= f.submit '新規登録ボタン' %>
  </div>
 <% end %>
</div>