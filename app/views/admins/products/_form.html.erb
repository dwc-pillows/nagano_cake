  <%= form_for [:admins, product], html: { class: "form-horizontal" } do |f| %>
  <div class="row">
    <div class="col-xs-4">
      <div class="form-group block-content">
        <%=attachment_image_tag(product, :image, :fill, 300, 200, format: 'jpeg', fallback: "no_image.jpg", size: '300x200', id: "img", class: "img-responsive") %>
        <%= f.attachment_field :image, class: "input-sm" %>
      </div>
    </div>

    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :商品名, class: "col-sm-4 control-label" %>
        <%= f.text_field :name, class: "col-xs-7" %>
      </div>
      <div class="form-group">
        <%= f.label :商品説明, class: "col-sm-4 control-label" %>
        <%= f.text_area :description, rows:'5', class: "col-xs-7" %>
      </div>
      <div class="form-group">
        <%= f.label :ジャンル, class: "col-sm-4 control-label" %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: '--選択してください--', class: "col-xs-7" %>
      </div>
      <div class="form-group">
        <%= f.label :税抜価格, class: "col-sm-4 control-label" %>
        <%= f.text_field :price, class: "col-xs-7" %><p>円</p>
      </div>
      <div class="form-group">
        <%= f.label :販売ステータス, class: "col-sm-4 control-label" %>
        <%= f.select :is_active, [["売切れ", false],["販売中", true]], include_blank: '--選択してください--', class: "col-xs-7" %>
      </div>
      <div class="form-group">
        <%= f.label :おすすめ表示, class:"col-sm-4 control-label" %>
        <%= f.select :recommend, [["しない", false],["する", true]], include_blank: '--選択してください--', class: "col-xs-7" %>
      </div>
    </div>
  </div>

  <div class="row field text-right form-group">
    <%= f.submit '商品情報更新', class: "btn btn-primary" %>
  </div>
  <% end %>
