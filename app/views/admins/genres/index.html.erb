<div class="container">
  <div class="row">
    <h2>ジャンル一覧・追加</h2>
    <div class="new-genre">
      <%= form_for [:admins, @genre] do |f| %>
          <%= f.label :name, "ジャンル", class: "genre-form" %>
          <%= f.text_field :name, class: "genre-form" %>
          <%= f.radio_button :is_active, :true, checked: true, class: "genre-form" %>
          <%= f.label :is_active, "有効", class: "genre-form" %>
          <%= f.radio_button :is_active, :false, checked: false, class: "genre-form" %>
          <%= f.label :is_active, "無効", class: "genre-form" %>
          <%= f.submit "追加", class:"btn btn-info" %>
      <% end %>
    </div>
    <div class="row">
      <div class="col-xs-4">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th class="col-xs-2">ジャンル</th>
              <th class="col-xs-1">状態</th>
              <th class="col-xs-1"></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= genre.is_active ? '有効' : '無効' %></td>
              <td align="center"><%= link_to "編集する", edit_admins_genre_path(genre.id), class:"btn btn-primary" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
