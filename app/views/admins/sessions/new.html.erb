<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <h3 class="form-group">管理者ログイン</h3>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
      <%= alert %>

        <div class="form-group">
          <%= f.label :メールアドレス, class: "col-xs-4 control-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-xs-3" %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード, class: "col-xs-4 control-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "col-xs-3" %>
        </div>

        <div class="form-group">
          <%= f.submit "ログイン", class: "btn btn-primary col-xs-2 col-xs-offset-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
