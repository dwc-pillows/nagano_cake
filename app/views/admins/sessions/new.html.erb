<div class="container">
  <h2>管理者ログイン</h2>

  <div class="col-xs-8 col-xs-offset-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
    <%= alert %>

      <div class="form-group">
        <%= f.label :メールアドレス, class: "col-xs-2 control-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-xs-3" %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード, class: "col-xs-2 control-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "col-xs-3" %><br>
      </div>

      <div class="form-group">
        <%= render "admins/shared/links"%>
      </div>
  
      <div class="form-group">
        <%= f.submit "ログイン", class: "btn btn-primary col-xs-2 col-xs-offset-2" %>
      </div>
    <% end %>
  </div>

  
</div>
