<div class="container">
  <div class="row">
    <h2>注文履歴詳細</h2>
  </div>
  <div class="row">
    <table class="col-xs-10">
      <tr>
        <th>購入者</th>
        <td><%= @order.user.last_name + @order.user.first_name %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
          <%= @order.zip_code + @order.address %>
          <%= @order.name %>
        </td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.pay_method %></td>
      </tr>
      <tr>
        <th>注文ステータス</th>
        <td><%= @order.order_status %></td>
      </tr>
    </table>
  </div>
  <div class="row">
    <table class="table">
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th>制作ステータス</th>
        <th></th>
      </tr>
      <% @order_products.each do |order_product| %>
        <tr>
          <td><%#= order_product.product.name %></td>
          <td><%#= order_product.taxed_product_price.to_s %></td>
          <td><%#= order_product.amount %></td>
          <td><%#= order_product.subtotal %></td>
            <%= form_for [:admin, @order_products] do |f| %>
              <td><%= f.order_product.product.name %></td>
              <td><%#= order_product.taxed_product_price %></td>
            <% end %>
        </tr>
      <% end %>
      <tr><tr>
    </table>
  </div>
</div>
