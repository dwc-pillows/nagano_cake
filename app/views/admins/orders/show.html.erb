<div class="container">
  <div class="row">
    <h2>注文履歴詳細</h2>
  </div>
  <div class="row">
    <div class="col-xs-6">
      <table class="table table-bordered">
        <tr>
          <th>購入者</th>
          <td><%= @order.user.last_name + ' ' + @order.user.first_name %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            <%= @order.zip_code + " " + @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.pay_method %></td>
        </tr>
        <tr>
          <th>注文ステータス</th>
          <%= form_for [:admins, @order] do |f| %>
            <td>
              <%= f.select :order_status, [["入金待ち",0],["入金確認",1],["制作中",2],["発送準備中",3],["発送済み",4]] %>
              <%= f.submit '更新', class:"btn btn-success" %>
            </td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-8">
      <table class="table table-bordered">
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th>制作ステータス</th>
          <th></th>
        </tr>
        <% @order_products.each do |order_product| %>
          <tr>
            <td><%= order_product.product.name %></td>
            <td><%= order_product.taxed_product_price.to_s(:delimited) %></td>
            <td><%= order_product.amount %></td>
            <td><%= order_product.subtotal.to_s(:delimited) %></td>
            <%= form_for [:admins, order_product] do |f| %>
              <td>
                <%= f.select :production_status, [["着手不可",0],["制作待ち",1],["制作中",2],["制作完了",3]] %>
              </td>
              <td>
                <%= f.submit '更新', class:"btn btn-success" %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="col-xs-1"></div>
    <div class="col-xs-3">
      <table class="table table-bordered">
        <tr>
          <th>商品合計</th>
          <td class="text-right"><%= (@order.total_price - @order.postage).to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th>送料</th>
          <td class="text-right"><%= @order.postage.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th>請求合計金額</th>
          <td class="text-right"><%= @order.total_price.to_s(:delimited) %>円</td>
        </tr>
      </table>
  </>
</div>
