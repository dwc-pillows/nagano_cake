<div class="row">
    <div class="col-xs-3">
        <% render 'users/products/genre_index' %>
    </div>
    <div class="col-xs-9">
        <h1>商品一覧</h1>
        （全<%= Product.count %> 件）<br>
        <% @products.each do |product| %>
            <%= link_to users_product_path(product) do %>
              <%= attachment_image_tag(product, :image, :fill, 100, 100, fallback:"no_image.jpg", size: '100x100') %><br>
            <% end %>
            商品名:<%= product.name %><br>
            <%= product.price %>円<br>
        <% end %>
        <%= paginate @products, class: "gaginate" %>
    </div>
</div>
