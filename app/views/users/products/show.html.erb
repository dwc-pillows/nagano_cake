<div class="container">
    <div class="row">
        <div class="col-xs-3">
            <% render 'users/products/genre_index' %>
        </div>
        <div class="col-xs-9">
            <%= attachment_image_tag(@product, :image, :fill, 40, 40, fallback:"no_image.jpg",size: '40x40') %><br>
            <h1>商品名:<%= @product.name %></h1><br>
            <%= @product.description %><br>
            <%= @product.price %>円<br>
        </div>
    </div>
    <div class="row">
        　<%= form_for [:users, @cart_item] do |f| %>
            <%= f.hidden_field :product_id, :value => @product.id %>
            <%= f.select :amount,(1..10).to_a %>
            <%= f.submit "カートに入れる", class:"btn btn-primary" %>
        　<% end %>
    </div>
</div>
