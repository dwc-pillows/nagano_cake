<div class="container">
  <h3>配送先編集</h3>

  <div class="row">
    <table>
      <tbody>
        <%= form_for [:users, @delivery] do |f| %>
          <div class="field">
            <tr>
              <td><p>郵便番号(ハイフンなし)</p></td>
              <td><%= f.text_field :zip_code %></td>
            </tr>
          </div>
          <div class="field">
            <tr>
              <td><p>住所</p></td>
              <td><%= f.text_field :address %></td>
            </tr>
          </div>
          <div class="field">
            <tr>
            <td><p>宛名</p></td>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit '更新する'%></td>
            </tr>
          </div>
        <% end %>
      </tbody>
    </table>
  </div>
</div>