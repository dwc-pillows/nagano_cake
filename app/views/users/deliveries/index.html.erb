<div class="container">
  <h3>配送先登録/一覧</h3>
 
  <div class="row">
    <table>
      <tbody>
        <%= form_for [:users, @delivery] do |f| %>
          <div class="field">
            <tr>
              <td><p>郵便番号(ハイフンなし)</p></td>
              <td><%= f.text_field :zip_code %></td>
            </tr>
          </div>
          <div class="field">
            <tr>
              <td><p>住所</p></td>
              <td><%= f.text_field :address %></td>
            </tr>
          </div>
          <div class="field">
            <tr>
            <td><p>宛名</p></td>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit '登録する'%></td>
            </tr>
          </div>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row">
    <table>
      <tbody>
        <tr>
          <td><p>郵便番号</p></td>
          <td><p>住所</p></td>
          <td><p>宛名</p></td>
          <td></td>
        </tr>
        <%@deliveries.each do |delivery|%>
          <tr>
            <td><%=delivery.zip_code%></td>
            <td><%=delivery.address%></td>
            <td><%=delivery.name%></td>
						<td>
              <%= link_to "編集する", edit_users_delivery_path(delivery), class: "btn-sm btn-success" %></td>
            </td>
						<td>
              <%= link_to "削除する", users_delivery_path(delivery) , method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger" %></td>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
</div>