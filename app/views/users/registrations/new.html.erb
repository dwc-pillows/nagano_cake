<div class="container">
  <div class="row">
    <h2>新規会員登録</h2>
  </div>

  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        
      <div class="form-group">
        <div class="col-xs-2">
          <%= f.label "名前" %>
        </div>

        <div class="col-xs-1 text-right">
          <%= f.label "（姓）"%>
        </div>

        <div class="col-xs-2">
          <%= f.text_field :last_name%>
        </div>

        <div class="col-xs-1 text-right">
          <%= f.label "（名）"%>
        </div>

        <div class="col-xs-2">
          <%= f.text_field :first_name%>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-2">
          <%= f.label "フリガナ"%>
        </div>

        <div class="col-xs-1 text-right">
          <%= f.label "（セイ）"%>
        </div>

        <div class="col-xs-2">
          <%= f.text_field :last_name_kana%>
        </div>

        <div class="col-xs-1 text-right">
          <%= f.label "（メイ）"%>
        </div
        >
        <div class="col-xs-2">
          <%= f.text_field :first_name_kana%>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-3">
          <%= f.label "メールアドレス" %>
        </div>
        <div class="col-xs-9">
          <%= f.email_field :email, autocomplete: "email" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-3">
          <%= f.label "郵便番号（ハイフンなし）" %>
        </div>
        <div class="col-xs-9">
          <%= f.text_field :zip_code %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-3">
          <%= f.label "住所" %>
        </div>
        <div class="col-xs-9">
          <%= f.text_field :address, :size => "63*63" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-3">
          <%= f.label "電話番号（ハイフンなし）"%>
        </div>
        <div class="col-xs-9">
          <%= f.text_field :phone_number %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-3">
          <%= f.label :password, "パスワード（6文字以上）"%>
        </div>
        <div class="col-xs-9">
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-3">
          <%= f.label :password_confirmation, "パスワード確認用"%>
        </div>
        <div class="col-xs-9">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="actions row">
          <%= f.submit "新規登録", class: "col-xs-2 col-xs-offset-4 btn btn-success" %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <h2>既に登録済みの方</h2>
    <div class="col-xs-offset-1">
      <h4><%= link_to  "こちら", new_user_session_path %>   からログインしてください。</h4>
    </div>
  </div>
</div>
