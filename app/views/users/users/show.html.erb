<div class="container">
  <div class="row">
    <h2 class="col-xs-offset-3">マイページ</h2>
  </div>
  <div class="row">
    <strong class="col-xs-offset-1">　 登録情報　</strong>
    <%= link_to "編集する", edit_users_user_path(current_user.id), class: "btn btn-primary" %>
    <%= link_to "パスワードを変更する", "", class: "btn btn-primary" %>
  </div>
  <div class="row">
  　<div class="col-xs-6 col-xs-offset-1">
      <table class="table table-bordered">
        <tr>
          <th class="col-xs-2">氏名</th>
          <td class="col-xs-4"><%= @user.last_name + "  " + @user.first_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @user.last_name_kana + "  " + @user.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @user.zip_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @user.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @user.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <strong class="col-xs-offset-1">　 配送先　　</strong>
    <%= link_to "一覧をみる", users_deliveries_path, class: "btn btn-primary" %>
  </div>
  <div class="row">
    <strong class="col-xs-offset-1">　 注文履歴　</strong>
    <%= link_to "一覧をみる", users_orders_path, class: "btn btn-primary" %>
  </div>
</div>
